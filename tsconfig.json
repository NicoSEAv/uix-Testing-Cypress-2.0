{
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "sourceMap": false,
    "declaration": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "target": "es5",
    "module": "es2020",
    "lib": ["es5", "dom"],
    "types": ["cypress", "node"],
    "moduleResolution": "node",
    "paths": {
      "@sv/yudoo/core": ["./src/core/index"],
      "@sv/api/*": ["./src/api/*"],
      "@sv/testing/uix": ["./cypress/support/test-client"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts"]
}
